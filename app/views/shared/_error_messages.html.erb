<% if @contact.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      
      <%= t :validation, scope: [ :activerecord, :errors], count: @contact.errors.count %>
    </div>
    <ul>
    <% @contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>