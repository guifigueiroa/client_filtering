<% if @contact.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      O formulário contém <%= pluralize(@contact.errors.count, "erro") %>.
    </div>
    <ul>
    <% @contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>